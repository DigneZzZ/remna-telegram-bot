# =============================================================================
# REMNAWAVE TELEGRAM BOT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Remnawave API Configuration
API_BASE_URL=https://your-remnawave-panel.com/api
REMNAWAVE_API_TOKEN=your_api_token_here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Admin User IDs (comma-separated list of Telegram user IDs)
# Get your Telegram user ID by messaging @userinfobot
ADMIN_USER_IDS=123456789,987654321

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Logging Level (ERROR, WARNING, INFO, DEBUG)
# For production use ERROR, for development use DEBUG
LOG_LEVEL=ERROR

# Environment (production, development, testing)
ENVIRONMENT=production

# =============================================================================
# DOCKER CONFIGURATION (if using Docker)
# =============================================================================

# These are automatically set by Docker Compose
# PYTHONUNBUFFERED=1

# =============================================================================
# EXAMPLE VALUES
# =============================================================================
# API_BASE_URL=https://panel.example.com/api
# REMNAWAVE_API_TOKEN=rmn_1234567890abcdef1234567890abcdef
# TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
# ADMIN_USER_IDS=123456789,987654321
# LOG_LEVEL=ERROR
# ENVIRONMENT=production
